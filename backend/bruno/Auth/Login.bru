meta {
  name: Login
  type: http
  seq: 1
}

post {
  url: {{base_url}}/api/v1/auth/login/access-token
  body: formUrlEncoded
  auth: none
}

body:form-urlencoded {
  username: user@example.com
  password: password123
}

vars:pre-request {
  base_url: https://collector.local:30443
}

script:post-response {
  if (res.getStatus() === 200) {
    bru.setEnvVar("token", res.getBody().access_token);
  }
}
